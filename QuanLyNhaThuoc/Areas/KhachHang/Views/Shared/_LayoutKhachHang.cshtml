<script>
    let isPopupEventBound = false;

    // Hiển thị popup
    function showSearchPopup() {
        const popup = document.getElementById("search-popup");
        popup.classList.add("active");

        // Lắng nghe sự kiện click bên ngoài nếu chưa được gắn
        if (!isPopupEventBound) {
            document.addEventListener("mousedown", handleOutsideClick);
            isPopupEventBound = true;
        }
    }

    // Xử lý khi click bên ngoài popup
    function handleOutsideClick(event) {
        const popup = document.getElementById("search-popup");
        const searchBar = document.querySelector(".search-bar");

        if (!popup.contains(event.target) && event.target !== searchBar) {
            popup.classList.remove("active");
            document.removeEventListener("mousedown", handleOutsideClick);
            isPopupEventBound = false;
        }
    }

    // Lắng nghe sự kiện khi nhập liệu vào thanh tìm kiếm
    document.querySelector(".search-bar").addEventListener("input", function () {
        const searchBar = document.querySelector('.search-bar');
        const searchPopup = document.getElementById('search-popup');

        const keyword = searchBar.value;

        fetch(`/KhachHang/SanPham/Search?keyword=${encodeURIComponent(keyword)}`, {
            method: 'GET',
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
            .then(response => response.text())
            .then(data => {
                searchPopup.innerHTML = data;
            })
            .catch(error => console.error('Error:', error));
    });
    $(document).ready(function () {
        $('.nav-link.dropdown-toggle').hover(function () {
            var loaiMenu = $(this).data('loai-menu');
            var dropdownMenu = $(this).siblings('.danh-muc-container');

            if (!dropdownMenu.hasClass('loaded')) {
                $.ajax({
                    url: '@Url.Action("GetDanhMucByLoaiMenu", "DanhMuc")',
                    data: { loaiMenu: loaiMenu },
                    success: function (data) {
                        dropdownMenu.html(data).addClass('loaded').show();
                    }
                });
            }
        });
    }); // Đóng hàm jQuery .ready

    // Cập nhật giỏ hàng
    async function updateCartCount() {
        try {
            const response = await fetch('/KhachHang/SanPham/GetCartCount'); // Gọi API
            const data = await response.json();

            document.getElementById('cartCount').textContent = data.count;
        } catch (error) {
            console.error('Error fetching cart count:', error);
        }
    }

    // Gọi hàm khi trang web tải xong
    document.addEventListener("DOMContentLoaded", updateCartCount);
</script>

