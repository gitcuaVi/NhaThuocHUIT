@model IEnumerable<QuanLyNhaThuoc.Areas.KhachHang.Models.GioHangViewModel>

@if (Model != null && Model.Any())
{
    <table>
        <tr>
            <th>Tên Thuốc</th>
            <th>Hình Ảnh</th>
            <th>Đơn Giá</th>
            <th>Số Lượng</th>
            <th>Đơn Vị</th>
            <th>Thành Tiền</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenThuoc</td>
                <td><img src="@item.HinhAnhDauTien" alt="@item.TenThuoc" width="50" /></td>
                <td>@item.DonGia</td>
                <td>@item.SoLuong</td>
                <td>@item.DonVi</td>
                <td>@item.ThanhTien</td>
            </tr>
        }
    </table>
}
else
{
    <p>Giỏ hàng trống.</p>
}


