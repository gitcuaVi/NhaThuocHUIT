@model List<QuanLyNhaThuoc.Areas.KhachHang.Models.ThongTinDatHangViewModel>

<link href="~/css/thongtindathang.css" rel="stylesheet" />

<div class="order-details-container">
    <h2>Thông tin đơn hàng</h2>
    <p><strong>Họ tên khách hàng:</strong> @Model.FirstOrDefault()?.TenKhachHang</p>
    <p><strong>Số điện thoại:</strong> @Model.FirstOrDefault()?.SoDienThoai</p>
    <p><strong>Địa chỉ:</strong> @Model.FirstOrDefault()?.DiaChi</p>

    <h3>Danh sách sản phẩm</h3>
    <table>
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenSanPham</td>
                    <td>@item.SoLuong</td>
                    <td>@String.Format("{0:N0}", item.DonGia)₫</td>
                    <td>@String.Format("{0:N0}", item.ThanhTien)₫</td>
                </tr>
            }
        </tbody>
    </table>
    <p><strong>Tổng tiền:</strong> @String.Format("{0:N0}", Model.Sum(i => i.ThanhTien))₫</p>
</div>
