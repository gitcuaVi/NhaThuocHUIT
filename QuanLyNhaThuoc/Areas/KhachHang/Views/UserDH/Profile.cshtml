@model QuanLyNhaThuoc.Areas.KhachHang.Models.ThongTinKhachHangViewModel

@{
    ViewData["Title"] = "Thông tin người dùng";
}

<h2 class="profile-header">Thông tin người dùng</h2>
<div class="profile-container">
    <div class="profile-card">
        <div class="profile-info">
            <p class="profile-text-email"><strong>Email:</strong> @Model.Email</p>
            <p class="profile-text-phone"><strong>Số điện thoại:</strong> @Model.SoDienThoai</p>
            <p class="profile-text-name"><strong>Tên khách hàng:</strong> @Model.TenKhachHang</p>
            <p class="profile-text-gender"><strong>Giới tính:</strong> @Model.GioiTinh</p>
            <p class="profile-text-address"><strong>Địa chỉ:</strong> @Model.DiaChi</p>
            <p class="profile-text-dob"><strong>Ngày sinh:</strong> @(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "N/A")</p>
            <p class="profile-text-points"><strong>Điểm:</strong> @Model.Diem</p>
        </div>

        <div class="profile-actions">
            <form method="post" asp-action="Logout" class="profile-logout-form">
                <button type="submit" class="profile-btn profile-btn-logout">Đăng xuất</button>
            </form>
            <a href="@Url.Action("EditProfile", "UserDH")" class="profile-btn profile-btn-edit">Chỉnh sửa thông tin</a>
            <a href="@Url.Action("Index", "LichSuDonHang")" class="profile-btn profile-btn-lsdh">Lịch Sử Đơn Hàng</a>
            <a href="@Url.Action("ChangePassword", "UserDH")" class="profile-btn profile-btn-change-password">Đổi mật khẩu</a>
        </div>
    </div>
</div>

<style>
    .profile-container {
        display: flex;
        justify-content: center;
        padding-top: 50px;
    }

    .profile-card {
        width: 100%;
        max-width: 600px;
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        font-size: 2em;
        color: #4CAF50;
        text-align: center;
        margin-top: 20px;
    }

    .profile-info {
        font-size: 1.1em;
        margin-bottom: 20px;
    }

        .profile-info p {
            margin: 10px 0;
        }

    .profile-text-email, .profile-text-phone, .profile-text-name,
    .profile-text-gender, .profile-text-address, .profile-text-dob,
    .profile-text-points {
        font-size: 1.1em;
        margin: 10px 0;
    }

    .profile-actions {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 20px;
    }

    .profile-btn {
        padding: 10px 20px;
        border-radius: 5px;
        color: white;
        font-size: 1em;
        text-align: center;
        text-decoration: none;
        flex: 1;
    }

    .profile-btn-logout {
        background-color: #f44336;
    }

    .profile-btn-edit {
        background-color: #4CAF50;
    }

    .profile-btn-lsdh {
        background-color: gold;
    }

    .profile-btn-change-password {
        background-color: #2196F3;
    }

    .profile-btn:hover {
        opacity: 0.8;
    }
</style>
