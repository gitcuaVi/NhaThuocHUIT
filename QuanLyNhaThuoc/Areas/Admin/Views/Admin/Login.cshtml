@model QuanLyNhaThuoc.Models.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Đăng nhập hệ thống</h2>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <!-- Use the ASP.NET Core form tag helper -->
                <form method="post" asp-action="Login" id="loginForm">
                    <!-- Anti-forgery token -->
                    @Html.AntiForgeryToken()

                    <!-- Use tag helpers to bind the model fields -->
                    <div class="form-group">
                        <label asp-for="Username" class="control-label">Email hoặc Số điện thoại</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Mật khẩu</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Show server-side validation error if any -->
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="form-group text-danger">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#loginForm").on("submit", function (e) {
                let username = $("#Username").val().trim();
                let password = $("#Password").val().trim();

                if (!username || !password) {
                    e.preventDefault();
                    alert("Vui lòng điền đủ thông tin");
                }
            });
        });
    </script>

    <!-- Include validation scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.2/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
