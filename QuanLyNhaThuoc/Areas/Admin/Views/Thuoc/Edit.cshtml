@model QuanLyNhaThuoc.Models.Thuoc
@{
    ViewData["Title"] = "Chỉnh sửa thuốc";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chỉnh sửa thuốc</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="MaThuoc" />

    <div class="form-group">
        <label for="TenThuoc">Tên Thuốc</label>
        <input asp-for="TenThuoc" class="form-control" />
        <span asp-validation-for="TenThuoc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="HanSuDung">Hạn Sử Dụng</label>
        <input asp-for="HanSuDung" type="date" class="form-control" />
        <span asp-validation-for="HanSuDung" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DonGia">Đơn Giá</label>
        <input asp-for="DonGia" class="form-control" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="SoLuongTon">Số Lượng Tồn</label>
        <input asp-for="SoLuongTon" class="form-control" />
        <span asp-validation-for="SoLuongTon" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="MaLoaiSanPham">Loại Sản Phẩm</label>
        <select asp-for="MaLoaiSanPham" asp-items="ViewBag.MaLoaiSanPham" class="form-control"></select>
        <span asp-validation-for="MaLoaiSanPham" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ImageFiles">Hình Ảnh</label>
        <input type="file" name="ImageFiles" multiple class="form-control-file" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>
