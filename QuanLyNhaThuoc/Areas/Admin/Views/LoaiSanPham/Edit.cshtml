@model QuanLyNhaThuoc.Models.LoaiSanPham

@{
    ViewData["Title"] = "Chỉnh Sửa Loại Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5 p-4 border rounded shadow-sm bg-light">
    <h2 class="text-center mb-4">Chỉnh Sửa Loại Sản Phẩm</h2>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Tên Loại Field -->
        <div class="form-group mb-3">
            <label asp-for="TenLoai" class="form-label">Tên Loại</label>
            <input asp-for="TenLoai" class="form-control" required />
            <span asp-validation-for="TenLoai" class="text-danger"></span>
        </div>

        <!-- Danh Mục Field -->
        <div class="form-group mb-3">
            <label asp-for="MaDanhMuc" class="form-label">Danh Mục</label>
            <select asp-for="MaDanhMuc" class="form-select" asp-items="ViewBag.MaDanhMuc" required>
                <option value="">-- Chọn Danh Mục --</option>
            </select>
            <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
