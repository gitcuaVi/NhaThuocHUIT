@model IEnumerable<QuanLyNhaThuoc.Models.LoaiSanPham>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mã Loại
            </th>
            <th>
                Tên Loại
            </th>
            <th>
                Tên Danh Mục
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLoaiSanPham)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenLoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaDanhMucNavigation.TenDanhMuc) 
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaLoaiSanPham">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaLoaiSanPham">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaLoaiSanPham">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
