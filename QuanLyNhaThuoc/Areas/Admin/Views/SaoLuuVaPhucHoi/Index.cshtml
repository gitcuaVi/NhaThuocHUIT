@model IEnumerable<QuanLyNhaThuoc.Models.SaoLuuVaPhucHoi>

@{
    ViewData["Title"] = "Sao Lưu và Phục Hồi";
}

<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info text-center">
            @TempData["Message"]
        </div>
    }

    <div class="row mb-4">
        <!-- Form sao lưu -->
        <div class="col-md-6">
            <form method="post" asp-action="SaoLuu">
                <button type="submit" class="btn btn-success btn-block">
                    <i class="fas fa-save"></i> Sao Lưu
                </button>
            </form>
        </div>
            
        <!-- Form phục hồi -->
        <div class="col-md-6">
            <form method="post" asp-action="PhucHoi">
                <div class="form-group">
                    <input type="file" class="form-control" id="backupFile" name="backupFile" placeholder="Chọn tệp sao lưu" required />
                </div>
                <button type="submit" class="btn btn-warning btn-block">
                    <i class="fas fa-undo"></i> Bắt Đầu Phục Hồi
                </button>
            </form>
        </div>
    </div>

    <h3 class="text-center mb-4">Lịch Sử Sao Lưu</h3>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Mã Sao Lưu</th>
                <th>Nhân Viên</th>
                <th>Thời Gian Sao Lưu</th>
                <th>Thời Gian Phục Hồi</th>
                <th>Trạng Thái</th>
                <th>Tên Tệp</th>
                <th>Địa Chỉ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var backup in Model)
            {
                <tr>
                    <td>@backup.MaSaoLuu</td>
                    <td>@backup.MaNhanVien</td>
                    <td>@backup.ThoiGianSaoLuu?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@backup.ThoiGianPhucHoi?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@backup.TrangThaiSaoLuu</td>
                    <td>@backup.TenFileSaoLuu</td>
                    <td>@backup.DiaChi</td>
                </tr>
            }
        </tbody>
    </table>

</div>

<!-- Link đến Font Awesome cho icon -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
