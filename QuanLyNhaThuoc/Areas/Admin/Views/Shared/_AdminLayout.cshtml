@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
    var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName"); // Lấy tên người dùng từ Session
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QL_NhaThuoc</title>

    <!-- Bootstrap 5 CSS từ CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome từ CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- AdminLTE CSS từ CDN -->
    <link href="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/css/adminlte.min.css" rel="stylesheet">
    <!-- CSS tùy chỉnh -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QL_NhaThuoc.styles.css" asp-append-version="true" />
    <!-- Các thư viện bổ sung từ CDN -->
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            @RenderSection("naviheader", required: false)
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                    <i class="fas fa-bars"></i>
                </a>
            </li>
            <!-- Right navbar links -->

            <ul class="navbar-nav ml-auto">
                <!-- User Info Dropdown -->
                <li class="nav-item dropdown user-panel-dropdown">
                    <a class="nav-link" href="#" role="button">
                        <i class="fas fa-user-circle"></i> @userName
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right user-panel-dropdown-content">
                        <a href="/User/Profile" class="dropdown-item">
                            <i class="fas fa-user"></i> Thông tin cá nhân
                        </a>
                        <a href="/User/ChangePassword" class="dropdown-item">
                            <i class="fas fa-key"></i> Đổi mật khẩu
                        </a>
                        <a href="/User/Logout" class="dropdown-item">
                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                        </a>
                    </div>
                </li>
                <!-- Fullscreen và Control Sidebar buttons -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4 custom-sidebar">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="~/lib/image/logo.png" alt="Admin Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Nhà Thuốc An Khang</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/lib/Image/user3-128x128.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@userName</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        @if (userRole == "NhanVien")
                        {
                            <!-- Các mục dành cho nhân viên -->
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-warehouse"></i>
                                    <p>
                                        Quản lý kho
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="/Kho/QuanLyNhap" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Quản lý nhập</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/Kho/QuanLyXuat" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Quản lý xuất</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <!-- Quản lý sản phẩm -->
                            <li class="nav-item">
                                <a href="/Admin/SanPham" class="nav-link">
                                    <i class="nav-icon fas fa-boxes"></i>
                                    <p>Quản lý sản phẩm</p>
                                </a>
                            </li>
                            <!-- Quản lý loại sản phẩm -->
                            <li class="nav-item">
                                <a href="/Admin/LoaiSanPham" class="nav-link">
                                    <i class="nav-icon fas fa-tags"></i>
                                    <p>Quản lý loại sản phẩm</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Admin/DanhMuc" class="nav-link">
                                    <i class="nav-icon fas fa-tags"></i>
                                    <p>Quản lý danh mục</p>
                                </a>
                            </li>
                            <!-- Quản lý đơn hàng -->
                            <li class="nav-item">
                                <a href="/DonHang" class="nav-link">
                                    <i class="nav-icon fas fa-shopping-cart"></i>
                                    <p>Quản lý đơn hàng</p>
                                </a>
                            </li>
                            <!-- Thanh toán hóa đơn -->
                            <li class="nav-item">
                                <a href="/HoaDon/ThanhToan" class="nav-link">
                                    <i class="nav-icon fas fa-receipt"></i>
                                    <p>Thanh toán hóa đơn</p>
                                </a>
                            </li>
                            <!-- Chatbot hỗ trợ khách hàng -->
                            <li class="nav-item">
                                <a href="/ChatBot" class="nav-link">
                                    <i class="nav-icon fas fa-robot"></i>
                                    <p>Chatbot hỗ trợ khách hàng</p>
                                </a>
                            </li>
                            <!-- Chấm công -->
                            <li class="nav-item">
                                <a href="/ChamCong" class="nav-link">
                                    <i class="nav-icon fas fa-user-clock"></i>
                                    <p>Chấm công</p>
                                </a>
                            </li>
                            <!-- Sao lưu và phục hồi -->
                            <li class="nav-item">
                                <a href="/BackupRestore" class="nav-link">
                                    <i class="nav-icon fas fa-database"></i>
                                    <p>Sao lưu và phục hồi</p>
                                </a>
                            </li>
                        }
                        @if (userRole == "Admin")
                        {
                            <!-- Các mục dành cho Admin -->
                            <li class="nav-item">
                                <a href="/Admin/PhanQuyen" class="nav-link">
                                    <i class="nav-icon fas fa-user-shield"></i>
                                    <p>Phân quyền</p>
                                </a>
                            </li>
                            <!-- Quản lý tài khoản -->
                            <li class="nav-item">
                                <a href="/Admin/NguoiDung" class="nav-link">
                                    <i class="nav-icon fas fa-user"></i>
                                    <p>Quản lý tài khoản</p>
                                </a>
                            </li>
                            <!-- Quản lý nhân viên -->
                            <li class="nav-item">
                                <a href="/Admin/NhanVien" class="nav-link">
                                    <i class="nav-icon fas fa-users"></i>
                                    <p>Quản lý nhân viên</p>
                                </a>
                            </li>
                            <!-- Thống kê -->
                            <li class="nav-item">
                                <a href="/ThongKe" class="nav-link">
                                    <i class="nav-icon fas fa-chart-bar"></i>
                                    <p>Thống kê</p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- Main Footer -->
        <footer class="main-footer">
            <strong>&copy; 2024 <a href="/">Nhà Thuốc</a>.</strong>
            All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/js/adminlte.min.js"></script>
    <!-- Các script bổ sung -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
