$(document).on("click", "#notification-icon", function (event) {
    event.preventDefault();
    const popup = $("#notification-popup");
    popup.toggleClass("active");

    if (!popup.hasClass("loaded")) {
        $.ajax({
            url: '/Admin/User/GetPendingOrders', // Gọi API lấy tất cả thông báo
            method: 'GET',
            success: function (data) {
                const notifications = $(data).find("li"); // Lấy danh sách thông báo
                const maxDisplay = 6; // Số thông báo tối đa hiển thị ban đầu
                const viewAllLink = `
                    <li class="text-center">
                        <a href="#" id="view-all-link" class="dropdown-footer">Xem tất cả</a>
                    </li>
                `;

                if (notifications.length > maxDisplay) {
                    // Hiển thị tối đa 6 thông báo ban đầu
                    const limitedNotifications = notifications.slice(0, maxDisplay);
                    popup.html(limitedNotifications).append(viewAllLink);
                } else {
                    popup.html(data); 
                }

                popup.addClass("loaded");
            },
            error: function () {
                console.error("Không thể tải thông báo.");
                popup.html('<p class="text-danger">Không thể tải thông báo.</p>');
            }
        });
    }
});

// Xử lý sự kiện khi nhấn "Xem tất cả"
$(document).on("click", "#view-all-link", function (event) {
    event.preventDefault();
    const popup = $("#notification-popup");

    $.ajax({
        url: '/Admin/User/GetPendingOrders', // Lấy tất cả thông báo
        method: 'GET',
        success: function (data) {
            popup.html(data); // Hiển thị toàn bộ thông báo
        },
        error: function () {
            console.error("Không thể tải thông báo.");
            popup.html('<p class="text-danger">Không thể tải thông báo.</p>');
        }
    });
});


// Đóng popup khi click bên ngoài
$(document).on("mousedown", function (event) {
    const popup = $("#notification-popup");
    const notificationIcon = $("#notification-icon");

    if (!popup.is(event.target) && popup.has(event.target).length === 0 &&
        !notificationIcon.is(event.target) && notificationIcon.has(event.target).length === 0) {
        popup.removeClass("active");
    }
});

</script>