@model IEnumerable<QuanLyNhaThuoc.ViewModels.GioHangNhanVienThanhToanView>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Giỏ Hàng</h2>

@if (!Model.Any())
{
    <p>Giỏ hàng đang trống.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên Thuốc</th>
                <th>Hình Ảnh</th>
                <th>Đơn Giá</th>
                <th>Số Lượng</th>
                <th>Tổng Tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Select((sp, index) => new { sp, index }))
            {
                <tr>
                    <td>@(item.index + 1)</td>
                    <td>@item.sp.TenThuoc</td>
                    <td>
                        <img src="@item.sp.HinhAnh" alt="@item.sp.TenThuoc" style="width: 50px; height: 50px;" />
                    </td>
                    <td>@string.Format("{0:#,##0}", item.sp.DonGia)₫</td>
                    <td>@item.sp.SoLuong</td>
                    <td>@string.Format("{0:#,##0}", item.sp.TongTien)₫</td>
                </tr>
            }
        </tbody>
    </table>
}

<h2>Tạo khách hàng và đặt hàng</h2>

<form id="createCustomerForm" method="post">
    <div class="form-group">
        <label for="TenKhachHang">Tên khách hàng:</label>
        <input type="text" id="TenKhachHang" name="TenKhachHang" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="GioiTinh">Giới tính:</label>
        <select id="GioiTinh" name="GioiTinh" class="form-control" required>
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
        </select>
    </div>

    <div class="form-group">
        <label for="DiaChi">Địa chỉ:</label>
        <input type="text" id="DiaChi" name="DiaChi" class="form-control" />
    </div>

    <div class="form-group">
        <label for="NgaySinh">Ngày sinh:</label>
        <input type="date" id="NgaySinh" name="NgaySinh" class="form-control" />
    </div>

    <div class="form-group">
        <label for="SoDienThoai">Số điện thoại:</label>
        <input type="text" id="SoDienThoai" name="SoDienThoai" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="GhiChu">Ghi chú:</label>
        <textarea id="GhiChu" name="GhiChu" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="Diem">Điểm tích lũy:</label>
        <input type="number" id="Diem" name="Diem" class="form-control" value="0" />
    </div>

    <button type="submit" class="btn btn-primary">Tạo khách hàng và đặt hàng</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#createCustomerForm").on("submit", function (e) {
                e.preventDefault();

                const formData = $(this).serialize();

                $.ajax({
                    url: '/Admin/NhanVienHoaDon/CreateCustomerAndOrder',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload(); // Refresh để cập nhật trạng thái
                        } else {
                            alert("Lỗi: " + response.message);
                        }
                    },
                    error: function () {
                        alert("Đã xảy ra lỗi khi tạo khách hàng và đặt hàng.");
                    }
                });
            });
        });
    </script>
}
