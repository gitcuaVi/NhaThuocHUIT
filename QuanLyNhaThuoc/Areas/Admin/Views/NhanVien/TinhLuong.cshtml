@model QuanLyNhaThuoc.Models.NhanVien
@{
    ViewData["Title"] = "Tính Lương Nhân Viên";
}
<div class="container my-4">
    <h1 class="mb-4">Tính Lương Nhân Viên</h1>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
    <form method="post" asp-action="TinhLuong">
        @Html.AntiForgeryToken()
        <input type="hidden" name="maNhanVien" value="@ViewBag.MaNhanVien" />

        <div class="mb-3">
            <label for="ngayTraLuong" class="form-label">Ngày Trả Lương</label>
            <input type="date" class="form-control" id="ngayTraLuong" name="ngayTraLuong" required />
        </div>

        <div class="mb-3">
            <label for="soGioTangCa" class="form-label">Số Giờ Tăng Ca</label>
            <input type="number" class="form-control" id="soGioTangCa" name="soGioTangCa" min="0" />
        </div>

        <div class="mb-3">
            <label for="luongThuong" class="form-label">Lương Thưởng</label>
            <input type="number" class="form-control" id="luongThuong" name="luongThuong" step="0.01" />
        </div>

        <div class="mb-3">
            <label for="khauTru" class="form-label">Khấu Trừ</label>
            <input type="number" class="form-control" id="khauTru" name="khauTru" step="0.01" required />
        </div>

        <div class="mb-3">
            <label for="ghiChu" class="form-label">Ghi Chú</label>
            <textarea class="form-control" id="ghiChu" name="ghiChu"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Tính Lương</button>
    </form>
</div>
