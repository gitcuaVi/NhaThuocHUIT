@model QuanLyNhaThuoc.Models.DanhMuc

@{
    ViewData["Title"] = "Chỉnh Sửa Danh Mục";
}

<div class="container mt-5 p-4 border rounded shadow-sm bg-light">
    <h2 class="text-center mb-4">Chỉnh Sửa Danh Mục</h2>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Hidden Field for MaDanhMuc -->
        <input type="hidden" asp-for="MaDanhMuc" />

        <!-- Tên Danh Mục Field -->
        <div class="form-group mb-3">
            <label asp-for="TenDanhMuc" class="form-label">Tên Danh Mục</label>
            <input asp-for="TenDanhMuc" class="form-control" required />
            <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="LoaiMenu" class="form-label">Loại Menu</label>
            <input asp-for="LoaiMenu" class="form-control" required />
            <span asp-validation-for="LoaiMenu" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
