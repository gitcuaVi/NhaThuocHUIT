@model QuanLyNhaThuoc.Models.DanhMuc

@{
    ViewData["Title"] = "Tạo Danh Mục Mới";
}

<div class="container mt-5 p-4 border rounded shadow-sm bg-light">
    <h2 class="text-center mb-4">Tạo Danh Mục Mới</h2>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Tên Danh Mục Field -->
        <div class="form-group mb-3">
            <label asp-for="TenDanhMuc" class="form-label">Tên Danh Mục</label>
            <input asp-for="TenDanhMuc" class="form-control" placeholder="Nhập tên danh mục" required />
            <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="LoaiMenu" class="form-label">Loại Menu</label>
            <input asp-for="LoaiMenu" class="form-control" placeholder="Nhập loại menu" required />
            <span asp-validation-for="LoaiMenu" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Tạo</button>
        </div>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
